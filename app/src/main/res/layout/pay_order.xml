<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/order_cardview"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/iv_order_pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/order_orange" />
        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_order_position1"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/order_cardview"
            android:text="￥35.50"
            android:textColor="#FB0305"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_order_position1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/order_cardview"
            android:layout_toEndOf="@id/order_cardview"
            android:text="请选择   规格   服务保障" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="规格"
            android:textColor="#000000"
            android:textSize="15sp" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ly_order_pay_addWeightText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="服务介绍" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务保障"
            android:textColor="#000000"
            android:textSize="15sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ly_order_pay_addPriceText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/bt_order_pay_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/order_pay_button_style"
        android:text="确   定"
        android:textSize="17sp" />


</LinearLayout>