<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF">

    <ImageView
        android:id="@+id/iv_login_back"
        android:layout_width="39dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_back"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:clickable="true"
        android:layout_marginStart="4dp"
        android:background="@drawable/clk_back"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:layout_marginTop="17dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="登录"/>
    </FrameLayout>


    <ImageView
        android:id="@+id/login_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/login_head" />
    <EditText
        android:id="@+id/edt_user_account"
        android:layout_marginTop="25dp"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_below="@+id/login_head"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_edit"
        android:paddingLeft="20dp"
        android:hint="账号"/>
    <EditText
        android:id="@+id/edt_pass_word"
        android:layout_marginTop="15dp"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_below="@+id/edt_user_account"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_edit"
        android:paddingLeft="20dp"
        android:hint="密码"/>
    <TextView
        android:id="@+id/tv_login_forget"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_pass_word"
        android:layout_alignRight="@+id/edt_pass_word"
        android:text="忘记密码"/>
<Button
    android:id="@+id/btn_register"
    android:layout_width="85dp"
    android:layout_height="30dp"
    android:layout_marginTop="40dp"
    android:background="@drawable/register_button"
    android:layout_below="@+id/edt_pass_word"
    android:layout_alignLeft="@+id/edt_user_account"
    android:textColor="#FFB230"
    android:text="立即注册"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_button"
        android:layout_below="@+id/edt_pass_word"
        android:layout_alignRight="@+id/edt_user_account"
        android:textColor="#FFFFFF"
        android:text="登录"/>
</RelativeLayout>