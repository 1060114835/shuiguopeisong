<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBaseBackground"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/register_toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBaseBackground">

        <ImageView
            android:id="@+id/iv_register_back"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:clickable="true"
            android:layout_marginStart="4dp"
            android:background="@drawable/clk_back"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription"
            android:focusable="true" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_register_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="立即注册"/>

    </FrameLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/colorBaseBackground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_head"
                android:layout_gravity="center"
                android:id="@+id/iv_head"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="TODO" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/round_corner_et">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_phone"
                    android:id="@+id/iv_account"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:contentDescription="TODO" />
                <EditText
                    android:textCursorDrawable="@drawable/cursor_color_et"
                    android:singleLine="true"
                    android:background="@null"
                    android:textColor="#b6b6b6"
                    android:layout_marginTop="15dp"
                    android:hint="请输入手机号"
                    android:id="@+id/et_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:ignore="Autofill"
                    android:inputType="" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/round_corner_et"
                android:layout_marginTop="15dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="330dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_password"
                    android:id="@+id/iv_password"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:contentDescription="TODO" />

                <EditText
                    android:textCursorDrawable="@drawable/cursor_color_et"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:textColor="#b6b6b6"
                    android:layout_marginTop="15dp"
                    android:hint="请输入密码"
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:ignore="TextFields" />
            </LinearLayout>

            <Button
                android:layout_marginBottom="20dp"
                android:id="@+id/bt_register"
                android:textSize="16sp"
                android:textColor="#fff"
                android:background="@drawable/round_corner_bt"
                android:layout_marginTop="25dp"
                android:text="立即注册"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>